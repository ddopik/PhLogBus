<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/item_card_corner_radius"
    app:cardElevation="@dimen/item_card_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/profile_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/following_card_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="@dimen/icon_view_holder_size_m"
            android:layout_height="@dimen/icon_view_holder_size_m"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginEnd="@dimen/dp12"
            android:src="@drawable/phlog_logo" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|start"
            android:orientation="vertical">

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:id="@+id/profile_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_rounded_font"
                android:textSize="@dimen/text_medium_s"
                tools:text="full name here" />

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:id="@+id/profile_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp4"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                tools:text="user name here" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:gravity="center|start"
                android:orientation="horizontal">

                <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                    android:id="@+id/profile_followers_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:gravity="center"
                    android:layout_weight=".3"
                    android:textSize="@dimen/font_small"
                    tools:text="125 followers" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp12"
                    android:layout_margin="2dp"
                    android:background="@android:color/darker_gray" />

                <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                    android:id="@+id/profile_following_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:lines="1"
                    android:textSize="@dimen/font_small"
                    tools:text="176 k following" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp12"
                    android:layout_margin="2dp"
                    android:background="@android:color/darker_gray" />

                <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                    android:id="@+id/profile_photos_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:lines="1"
                    android:textSize="@dimen/font_small"
                    tools:text="202 photo" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>