<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/campaign_inner_setting_icon_size"
            android:layout_height="@dimen/campaign_inner_setting_icon_size"
            android:layout_margin="@dimen/dp24"
            app:srcCompat="@drawable/ic_change_cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp4"
            android:orientation="vertical">

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_cover"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_cover"

                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp8"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@android:color/black" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/campaign_inner_setting_icon_size"
            android:layout_height="@dimen/campaign_inner_setting_icon_size"
            android:layout_margin="@dimen/dp24"
            app:srcCompat="@drawable/ic_change_cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp4"
            android:orientation="vertical">

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:id="@+id/campaign_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp8"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/campaign_inner_setting_icon_size"
            android:layout_height="@dimen/campaign_inner_setting_icon_size"
            android:layout_margin="@dimen/dp24"
            app:srcCompat="@drawable/ic_change_cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp4"
            android:orientation="vertical">

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:id="@+id/campaign_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MacBook Pro"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prize"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp8"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@android:color/black" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/campaign_inner_setting_icon_size"
            android:layout_height="@dimen/campaign_inner_setting_icon_size"
            android:layout_margin="@dimen/dp24"
            app:srcCompat="@drawable/ic_change_cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp4"
            android:orientation="vertical">

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:id="@+id/campaign_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/12/2019"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp8"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@android:color/black" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/campaign_inner_setting_icon_size"
            android:layout_height="@dimen/campaign_inner_setting_icon_size"
            android:layout_margin="@dimen/dp24"
            app:srcCompat="@drawable/ic_change_cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp4"
            android:orientation="vertical">

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:id="@+id/campaign_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/1/2020"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp8"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>


