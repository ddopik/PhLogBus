<android.support.design.bottomappbar.BottomAppBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:layout_gravity="bottom"
    android:background="@color/gray400"
    app:fabCradleVerticalOffset="12dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/gray400"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/navigation_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/widgets_padding_s"
            android:background="@color/transparent"
            android:fontFamily="@font/segoe_sb"
            android:gravity="center"
            android:lines="1"
            android:padding="@dimen/widgets_padding_s"
            android:text="@string/home"
            android:textAllCaps="false"
            android:textColor="@color/gray677078"
            android:textSize="@dimen/font_very_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/navigation_missions"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".2"
            tools:drawableTop="@drawable/ic_social_off" />

        <Button
            android:id="@+id/navigation_missions"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/widgets_padding_s"
            android:background="@color/transparent"
            tools:drawableTop="@drawable/ic_campaigns_off"
            android:fontFamily="@font/segoe_sb"
            android:gravity="center"
            android:lines="1"
            android:padding="@dimen/widgets_padding_s"
            android:text="@string/campaigns"
            android:textColor="@color/gray677078"
            android:textSize="@dimen/font_very_small"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/navigation_profile"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/navigation_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".2" />

        <Button
            android:id="@+id/navigation_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/widgets_padding_s"
            android:background="@color/transparent"
            tools:drawableTop="@drawable/ic_profile_off"
            android:fontFamily="@font/segoe_sb"
            android:gravity="center"
            android:lines="1"
            android:padding="@dimen/widgets_padding_s"
            android:text="@string/me"
            android:textColor="@color/gray677078"
            android:textSize="@dimen/font_very_small"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/navigation_downloads"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/navigation_missions"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".2" />

        <Button
            android:id="@+id/navigation_downloads"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            tools:drawableTop="@drawable/ic_downloads_off"
            android:fontFamily="@font/segoe_sb"
            android:gravity="center"
            android:lines="1"
            android:padding="@dimen/widgets_padding_s"
            android:layout_marginTop="@dimen/widgets_padding_s"
            android:text="@string/downloads"
            android:textColor="@color/gray677078"
            android:textSize="@dimen/font_very_small"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/navigation_call_support"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/navigation_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".2" />

        <TextView
            android:id="@+id/navigation_call_support"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            app:layout_constraintHeight_percent=".3"
            android:lines="1"
            android:fontFamily="@font/segoe_sb"
            android:text="@string/customer_support"
            android:textColor="@color/gray677078"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="1sp"
            android:textAllCaps="false"
            app:layout_constraintVertical_bias=".8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/navigation_downloads"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".2" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.bottomappbar.BottomAppBar>