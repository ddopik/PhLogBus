<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="@dimen/widgets_padding"
        android:background="@color/black"
        app:cardCornerRadius="@dimen/item_card_corner_radius"
        app:cardElevation="@dimen/item_card_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/album_img_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:backgroundTint="@color/black"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/album_icon"
                    android:layout_width="@dimen/icon_view_holder_size_m"
                    android:layout_height="@dimen/icon_view_holder_size_m"
                    android:layout_margin="@dimen/widgets_padding"
                    android:src="@drawable/default_user_pic" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/dp8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/album_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="album name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_medium_s" />

                    <TextView
                        android:id="@+id/album_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="author name"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/album_img_header"
                android:orientation="vertical"
                android:padding="@dimen/widgets_padding">


                <ImageView
                    android:id="@+id/album_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_user_profile" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/widgets_padding">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/album_img_like"
                            android:layout_width="@dimen/ic_size"
                            android:layout_height="@dimen/ic_size"
                            android:layout_marginStart="@dimen/dp16"
                            android:background="@color/transparent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_like" />

                        <ImageButton
                            android:id="@+id/album_img_comment"
                            android:layout_width="@dimen/ic_size"
                            android:layout_height="@dimen/ic_size"
                            android:layout_marginStart="@dimen/dp16"
                            android:background="@color/transparent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_comment" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/album_img_download"
                        android:layout_width="@dimen/ic_size"
                        android:layout_height="@dimen/ic_size"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp16"
                        android:background="@color/transparent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_download" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/album_img_like_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginBottom="@dimen/dp8"
                            android:text="10 Likes" />

                        <TextView
                            android:id="@+id/album_img_comment_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp8"
                            android:layout_marginBottom="@dimen/dp8"
                            android:text="35 comments" />

                    </LinearLayout>


                </FrameLayout>


            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray800"
        android:layout_gravity="bottom"
        android:padding="@dimen/dp24">

        <EditText
            android:id="@+id/img_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColorHint="@color/gray400"
            android:padding="@dimen/widgets_padding"
            android:background="@color/black"
            android:hint="@string/your_comment"/>

        <Button
            android:id="@+id/send_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:layout_weight="1"
            android:fontFamily="@font/arial_rounded_font"
            android:background="@color/transparent"
            android:textColor="@color/white"/>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/add_comment_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"/>

</FrameLayout>