<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="@dimen/dp2"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/flex_album_img_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_flex_height_l"
                android:padding="@dimen/widgets_padding_s"
                android:scaleType="centerCrop"
                tools:src="@drawable/default_photographer_profile"
                android:background="@color/black"/>

            <ImageView
                android:id="@+id/flex_album_img_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_flex_height_s"
                android:background="@color/black"
                android:padding="@dimen/widgets_padding_s"
                android:scaleType="centerCrop"
                tools:src="@drawable/default_user_profile" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/flex_album_img_2"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@color/black"
                android:padding="@dimen/widgets_padding_s"
                android:scaleType="centerCrop"
                tools:src="@drawable/default_photographer_profile" />

            <ImageView
                android:id="@+id/flex_album_img_4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="@dimen/widgets_padding_s"
                android:scaleType="centerCrop"
                tools:src="@drawable/default_campaign_header_view"
                android:background="@color/black"/>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
