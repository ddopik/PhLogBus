<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="4dp"
                                    android:layout_margin="@dimen/dp2"
                                    android:background="@color/white"
                                    app:cardElevation="0dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white">

            <com.example.ddopik.phlogbusiness.base.widgets.RoundedImageView
                    android:id="@+id/flex_album_img_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_flex_height_l"
                    android:layout_margin="@dimen/widgets_padding_s"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/default_photographer_profile"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

            <com.example.ddopik.phlogbusiness.base.widgets.RoundedImageView
                    android:id="@+id/flex_album_img_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_flex_height_s"
                    android:layout_margin="@dimen/widgets_padding_s"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/default_user_profile"
                    android:visibility="invisible"
                    tools:visibility="visible"
            />


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <com.example.ddopik.phlogbusiness.base.widgets.RoundedImageView
                    android:id="@+id/flex_album_img_2"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_margin="@dimen/widgets_padding_s"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/default_photographer_profile"
                    android:visibility="invisible"
                    tools:visibility="visible"
            />

            <com.example.ddopik.phlogbusiness.base.widgets.RoundedImageView
                    android:id="@+id/flex_album_img_4"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="@dimen/widgets_padding_s"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/default_campaign_header_view"
                    android:visibility="invisible"
                    tools:visibility="visible"
            />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
