<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/comment_parent_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp8"
                                    app:cardCornerRadius="@dimen/item_card_corner_radius"
                                    app:cardElevation="@dimen/item_card_elevation">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal">


        <ImageView
                android:id="@+id/commentAuthorImg"
                android:layout_width="@dimen/icon_view_holder_size_m"
                android:layout_height="@dimen/icon_view_holder_size_m"
                android:layout_marginStart="@dimen/dp12"
                android:layout_marginEnd="@dimen/dp12"
                android:layout_gravity="center"
                android:src="@drawable/phlog_logo"/>

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/notification_card_height"
                android:gravity="center|start"
                android:orientation="vertical"
                android:paddingTop="@dimen/widgets_padding">

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                    android:id="@+id/comment_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium_s"
                    tools:text="Bussness Author"
                    android:textColor="@color/colorlightg"
            />

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                    android:id="@+id/comment_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_normal"
                    android:layout_marginStart="@dimen/dp8"
                    tools:text="comment data here"/>

            <!--<TextView-->
            <!--android:id="@+id/notification_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/font_normal"-->
            <!--android:layout_marginTop="@dimen/dp4"-->
            <!--android:layout_marginBottom="@dimen/dp4"-->
            <!--tools:text="user name here" />-->


        </LinearLayout>


    </LinearLayout>
    <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
            android:id="@+id/image_comment_replay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_input_color"
            android:layout_margin="@dimen/dp16"
            android:text="@string/replay"
            android:layout_gravity="end|bottom"
    />

</android.support.v7.widget.CardView>