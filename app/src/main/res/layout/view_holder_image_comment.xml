<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/item_card_corner_radius"
    app:cardElevation="@dimen/item_card_elevation">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



        <ImageView
        android:id="@+id/commentAuthorImg"
        android:layout_width="@dimen/icon_view_holder_size_m"
        android:layout_height="@dimen/icon_view_holder_size_m"
        android:layout_marginStart="@dimen/dp12"
        android:layout_marginEnd="@dimen/dp12"
        android:layout_gravity="center"
        android:src="@drawable/phlog_logo" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/notification_card_height"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingTop="@dimen/widgets_padding">

            <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:id="@+id/comment_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_rounded_font"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                android:layout_marginStart="@dimen/dp8"
                tools:text="comment data here" />

            <!--<TextView-->
            <!--android:id="@+id/notification_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/font_normal"-->
            <!--android:layout_marginTop="@dimen/dp4"-->
            <!--android:layout_marginBottom="@dimen/dp4"-->
            <!--tools:text="user name here" />-->


        </LinearLayout>

</LinearLayout>


</android.support.v7.widget.CardView>