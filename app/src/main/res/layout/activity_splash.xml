<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/splash_screen_background">


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/app_logo"
                android:layout_width="@dimen/splash_logo_size"
                android:layout_height="@dimen/splash_logo_size"
                android:src="@drawable/phlog_logo"/>

        <TextView
                android:layout_marginTop="@dimen/widgets_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phlog"
                android:fontFamily="@font/segoe_b"
                android:textColor="@color/white"
                android:textSize="@dimen/text_head_xl"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="match_parent"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="1sp"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight=".08"
                android:lines="1"
                android:text="@string/for_business"
                android:fontFamily="@font/segoe_b"
                android:textColor="@color/white"
                android:textStyle="bold"/>

    </LinearLayout>
</FrameLayout>