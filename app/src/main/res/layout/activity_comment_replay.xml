<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <com.example.ddopik.phlogbusiness.base.widgets.CustomRecyclerView
                android:id="@+id/comment_replay_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/replay_container"
                app:orientation="vertical"
        />


        <FrameLayout
                android:id="@+id/replay_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
        >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:orientation="horizontal"
                    android:padding="@dimen/dp24">

                <com.example.ddopik.phlogbusiness.base.widgets.CustomAutoCompleteTextView
                        android:id="@+id/img_send_comment_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/send_comment_btn"
                        android:background="@color/black"
                        android:fontFamily="@font/verdana"
                        android:hint="@string/your_comment"
                        android:imeOptions="actionDone"
                        android:padding="@dimen/widgets_padding"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray400"/>

                <ImageButton
                        android:id="@+id/send_comment_btn"
                        android:layout_width="@dimen/dp45"
                        android:layout_height="@dimen/dp45"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/circle_blue"
                        android:padding="@dimen/widgets_padding"
                        android:scaleType="centerInside"
                        android:text="@string/send"
                        android:textColor="@color/white"
                        app:srcCompat="@drawable/ic_add_comment"/>


            </RelativeLayout>

        </FrameLayout>
    </RelativeLayout>

    <ProgressBar
            android:id="@+id/comment_replay_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone"/>

</FrameLayout>