<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_v"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <android.support.design.bottomappbar.BottomAppBar
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/gray400"
        app:fabCradleVerticalOffset="12dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/navigation_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:drawableTop="@drawable/ic_tab_home_on"
                android:fontFamily="@font/ph_log_font"
                android:gravity="center|bottom"
                android:lines="1"
                android:padding="@dimen/widgets_padding_s"
                android:text="@string/home"
                app:autoSizeMaxTextSize="11sp"
                android:textColor="@color/gray677078"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/navigation_missions"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2" />

            <Button
                android:id="@+id/navigation_missions"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:drawableTop="@drawable/ic_tab_missions_off"
                android:fontFamily="@font/ph_log_font"
                android:gravity="center|bottom"
                android:lines="1"
                android:padding="@dimen/widgets_padding_s"
                app:autoSizeMaxTextSize="11sp"
                android:text="@string/campaigns"
                android:textColor="@color/gray677078"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/navigation_profile"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/navigation_home"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2" />

            <Button
                android:id="@+id/navigation_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:drawableTop="@drawable/ic_tab_profile_off"
                android:fontFamily="@font/ph_log_font"
                android:gravity="center|bottom"
                android:lines="1"
                android:padding="@dimen/widgets_padding_s"
                android:text="@string/me"
                android:textColor="@color/gray677078"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeMaxTextSize="11sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/navigation_downloads"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/navigation_missions"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2" />

            <Button
                android:id="@+id/navigation_downloads"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:drawableTop="@drawable/ic_tab_home_off"
                android:fontFamily="@font/ph_log_font"
                android:gravity="center|bottom"
                android:lines="1"
                android:padding="@dimen/widgets_padding_s"
                android:text="@string/downloads"
                android:textColor="@color/gray677078"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeMaxTextSize="11sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/navigation_call_support"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/navigation_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/navigation_call_support"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center|bottom"
                android:lines="1"
                android:text="@string/call_support"
                android:textColor="@color/gray677078"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeMaxTextSize="11sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/navigation_downloads"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2" />

        </android.support.constraint.ConstraintLayout>
    </android.support.design.bottomappbar.BottomAppBar>
</FrameLayout>