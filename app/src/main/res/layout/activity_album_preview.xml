<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap"
            app:titleEnabled="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/inner_header_preview_height">


                <include
                    android:id="@+id/preview_app_bar"
                    layout="@layout/phlog_app_bar" />


            <ImageView
                android:id="@+id/album_preview_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/preview_app_bar"
                android:src="@drawable/default_campaign_header_view"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_rounded_font"
                    android:padding="@dimen/widgets_padding"
                    android:text="Album Name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_rounded_font"
                    android:padding="@dimen/widgets_padding"
                    android:textColor="@color/white"
                    android:text="246 following"
                    />
            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


    <com.example.ddopik.phlogbusiness.base.widgets.CustomRecyclerView
        android:id="@+id/album_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:orientation="vertical" />


    <ProgressBar
        android:id="@+id/user_profile_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />
</android.support.design.widget.CoordinatorLayout>
