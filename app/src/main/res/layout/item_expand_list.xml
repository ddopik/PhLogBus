<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toosl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_filter_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:padding="@dimen/widgets_padding"
    tools:background="@color/colorRed">



    <RadioButton
        android:id="@+id/filter_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:theme="@style/MyRadioButton"
        tools:checked="true" />

    <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
        android:id="@+id/filter_item_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:fontFamily="@font/arial_rounded_font"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal"
        tools:text="text_here" />
    <!--android:layout_marginStart="@dimen/dp32"-->
    <!--android:drawableStart="@drawable/check_box_background"-->
</LinearLayout>