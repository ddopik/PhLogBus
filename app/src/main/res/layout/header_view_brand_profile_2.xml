<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:.9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/brand_profile_cover_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:alpha=".2"
                android:layout_centerInParent="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"/>

        <ImageView
                android:id="@+id/brand_profile_img_ic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                tools:src="@drawable/phlog_logo"/>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:backgroundTint="@color/white"
                android:background="@drawable/ring"
                app:layout_constraintBottom_toBottomOf="@+id/brand_profile_img_ic"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".44"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/brand_profile_img_ic"/>

        <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/transparent"
                app:layout_constraintBottom_toTopOf="@+id/brand_profile_img_ic"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".1"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_menu_dots"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/header_profile_brand_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/segoe_b"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/white"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/header_profile_brand_website"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".09"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/brand_profile_img_ic"
                tools:text="@string/full_name"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/header_profile_brand_website"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:lines="1"
                android:fontFamily="@font/segoe_sb"
                android:textColor="@color/white"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/brand_profile_industry"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".06"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_profile_brand_name"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/brand_profile_industry"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/segoe_sb"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:lines="1"
                android:padding="@dimen/widgets_padding_s"
                android:textColor="@color/text_input_color"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_profile_brand_website"
                app:layout_constraintWidth_percent=".3"
                tools:text="Industry"/>
        <com.example.ddopik.phlogbusiness.base.widgets.CustomTextView
                android:id="@+id/brand_user_mail"
                tools:text="user name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="@dimen/font_normal"
                app:layout_constraintTop_toBottomOf="@+id/header_profile_brand_name"
                app:layout_constraintBottom_toTopOf="@+id/header_profile_brand_website"
                app:layout_constraintVertical_bias="0.533" app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/dp16"
                app:layout_constraintStart_toStartOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>